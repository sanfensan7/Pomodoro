.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background: var(--background-color);
  min-height: 100vh;
  gap: 24rpx;
}

/* 头部区域 */
.header {
  padding: 24rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background: var(--card-background);
  border-radius: var(--radius-medium);
  box-shadow: var(--shadow-light);
  border: none;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-medium);
}

.add-btn {
  background: linear-gradient(135deg, var(--theme-color), rgba(255, 107, 107, 0.8));
  color: white;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 20rpx;
  font-weight: 500;
}

/* 任务统计 */
.task-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-icon {
  font-size: 32rpx;
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-number {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--theme-color);
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 排序菜单 */
.sort-menu {
  position: absolute;
  top: 120rpx;
  right: 48rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 10;
  opacity: 0;
  transform: translateY(-20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.sort-menu.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.sort-option {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-option:last-child {
  border-bottom: none;
}

.task-list {
  width: 100%;
}

.task-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.task-item.completed {
  opacity: 0.7;
}

.task-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.task-checkbox.completed {
  border-width: 0;
}

.task-content {
  flex: 1;
  min-width: 0;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.task-title-section {
  flex: 1;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.task-meta {
  display: flex;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.priority-badge, .category-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  color: white;
}

.priority-badge.priority-high {
  background-color: #ff4757;
}

.priority-badge.priority-medium {
  background-color: #ffa502;
}

.priority-badge.priority-low {
  background-color: #2ed573;
}

.category-badge.category-work {
  background-color: #3742fa;
}

.category-badge.category-study {
  background-color: #2f3542;
}

.category-badge.category-life {
  background-color: #ff6348;
}

.category-badge.category-other {
  background-color: #747d8c;
}

.task-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-left: 16rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  background-color: #f8f8f8;
  color: #666;
}

.action-btn.edit-btn {
  background-color: #e3f2fd;
  color: #1976d2;
}

.action-btn.delete-btn {
  background-color: #ffebee;
  color: #d32f2f;
}

.task-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.task-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #999;
}

.start-focus {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 107, 107, 0.1);
}

.start-focus image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.add-task-btn {
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.task-form {
  position: fixed;
  bottom: -100%;
  left: 0;
  right: 0;
  background: #fff;
  padding: 40rpx;
  border-radius: 32rpx 32rpx 0 0;
  transition: all 0.3s ease;
  z-index: 100;
}

.task-form.show {
  bottom: 0;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-header text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

/* 优先级选择器 */
.priority-selector {
  display: flex;
  gap: 20rpx;
}

.priority-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.priority-item.active {
  background-color: var(--theme-color);
  color: white;
}

.priority-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.priority-dot.high {
  background-color: #ff4757;
}

.priority-dot.medium {
  background-color: #ffa502;
}

.priority-dot.low {
  background-color: #2ed573;
}

/* 分类标签选择器 */
.tag-selector {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.tag-item {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tag-item.active {
  background-color: var(--theme-color);
  color: white;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-cancel {
  background: #f8f8f8;
  color: #666;
}

.btn-submit {
  color: white;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
} 