.container {
  display: flex;
  flex-direction: column;
  padding: 48rpx;
  background-color: #fff;
  min-height: 100vh;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: var(--theme-color);
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 40rpx;
  font-weight: 300;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.task-list {
  width: 100%;
}

.task-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.task-item.completed {
  opacity: 0.7;
}

.task-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.task-checkbox.completed {
  border-width: 0;
}

.task-content {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.task-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.task-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #999;
}

.start-focus {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 107, 107, 0.1);
}

.start-focus image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.add-task-btn {
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.task-form {
  position: fixed;
  bottom: -100%;
  left: 0;
  right: 0;
  background: #fff;
  padding: 40rpx;
  border-radius: 32rpx 32rpx 0 0;
  transition: all 0.3s ease;
  z-index: 100;
}

.task-form.show {
  bottom: 0;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-header text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-cancel {
  background: #f8f8f8;
  color: #666;
}

.btn-submit {
  color: white;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
} 