.container {
  background: #f5f5f5;
  min-height: 100vh;
  --theme-color: #ff6b6b;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: var(--theme-color);
  color: white;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.back-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
}
.title {
  font-size: 36rpx;
  font-weight: 600;
}

.level-card {
  background: linear-gradient(135deg, white, #fafafa);
  border-radius: 16rpx;
  padding: 25rpx 20rpx;
  margin: 15rpx 5rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.level-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.level-badge {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--theme-color), #ff8e8e);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.level-text {
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.level-details {
  flex: 1;
}

.level-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.exp-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.exp-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.exp-progress {
  height: 100%;
  background: linear-gradient(90deg, var(--theme-color), #ff8e8e);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8rpx;
  margin: 15rpx 5rpx;
}

.stat-item {
  background: white;
  border-radius: 14rpx;
  padding: 20rpx 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  min-height: 95rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--theme-color);
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.category-tabs {
  margin: 20rpx 5rpx;
}

.category-container {
  display: flex;
  gap: 8rpx;
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 10rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  min-height: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-tab.active {
  background: var(--theme-color);
  color: white;
  font-weight: 600;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}

.category-name {
  margin-right: 8rpx;
}

.category-count {
  font-size: 22rpx;
  opacity: 0.8;
}

.achievements-list {
  margin: 0 5rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-bottom: 25rpx;
}

.achievement-item {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx 15rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.achievement-item.locked {
  opacity: 0.6;
  background: #f8f8f8;
}

.achievement-item.unlocked {
  border-left: 6rpx solid var(--theme-color);
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.achievement-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  margin-right: 25rpx;
  transition: all 0.3s ease;
}

.achievement-icon.unlocked {
  background: linear-gradient(135deg, var(--theme-color), #ff8e8e);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}
.achievement-info {
  flex: 1;
  min-width: 0;
}

.achievement-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
  line-height: 1.3;
}
.achievement-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.achievement-progress {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--theme-color);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
  min-width: 80rpx;
  text-align: right;
}

.achievement-reward {
  margin-top: 10rpx;
}

.reward-text {
  font-size: 22rpx;
  color: #FF9800;
  font-weight: 600;
}

.achievement-status {
  margin-left: 20rpx;
}

.status-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: white;
}

.status-badge.locked {
  background: #ccc;
}

.status-badge.unlocked {
  background: var(--theme-color);
}

.tips {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
}

.tips-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.tips-text {
  font-size: 26rpx;
}
