.container {
  display: flex;
  flex-direction: column;
  padding: 48rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
  font-size: 32rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.level-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.level-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.level-badge {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}

.level-text {
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.level-details {
  flex: 1;
}

.level-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.exp-info {
  font-size: 26rpx;
  color: #666;
}

.exp-bar {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.exp-progress {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.category-tabs {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.category-tab.active {
  background-color: rgba(var(--theme-color-rgb, 255, 107, 107), 0.1);
  font-weight: 500;
}

.category-name {
  margin-right: 8rpx;
}

.category-count {
  font-size: 22rpx;
}

.achievements-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.achievement-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.achievement-item.locked {
  opacity: 0.6;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.achievement-icon.unlocked {
  background-color: rgba(var(--theme-color-rgb, 255, 107, 107), 0.1);
  transform: scale(1.1);
}

.achievement-info {
  flex: 1;
}

.achievement-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.achievement-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.achievement-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
  min-width: 80rpx;
  text-align: right;
}

.achievement-status {
  margin-left: 24rpx;
}

.status-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: white;
  transition: all 0.3s ease;
}

.status-badge.locked {
  background-color: #ccc;
}

.tips {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.tips-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.tips-text {
  font-size: 28rpx;
}
