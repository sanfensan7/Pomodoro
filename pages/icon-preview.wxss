.container {
  padding: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.icon-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.icon-item {
  width: 45%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
}

.icon-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.icon-item text {
  font-size: 24rpx;
  color: #666;
}

.tip {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.regenerate-btn {
  margin-top: 40rpx;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  text-align: center;
} 