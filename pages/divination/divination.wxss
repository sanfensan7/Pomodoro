.container {
  background: #f5f5f5;
  min-height: 100vh;
  --theme-color: #ff6b6b;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: var(--theme-color);
  color: white;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.back-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.history-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.step-content {
  padding: 30rpx;
}

/* 介绍部分 */
.intro-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.intro-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.intro-text {
  flex: 1;
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.intro-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 表单部分 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.form-input, .picker-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  min-height: 60rpx;
  line-height: 1.4;
}

.form-input:focus {
  border-color: var(--theme-color);
  background: white;
}

.picker-input {
  color: #333;
  display: flex;
  align-items: center;
  min-height: 60rpx;
}

.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-item {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.gender-item.active {
  border-color: var(--theme-color);
  background: var(--theme-color);
  color: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.start-btn {
  width: 100%;
  padding: 25rpx;
  background: var(--theme-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 20rpx;
}

/* 加载动画 */
.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.loading-animation {
  text-align: center;
}

.bagua-container {
  margin-bottom: 40rpx;
}

.bagua-symbol {
  font-size: 120rpx;
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  text-align: center;
}

.loading-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.loading-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 结果部分 */
.result-content {
  padding-bottom: 100rpx;
}

.result-header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.result-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-name {
  font-size: 28rpx;
  color: var(--theme-color);
  font-weight: 600;
}

.divination-time {
  font-size: 24rpx;
  color: #999;
}

.result-sections {
  margin-bottom: 20rpx;
}

.result-section {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.section-title text:last-child {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.section-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.result-summary {
  background: linear-gradient(135deg, var(--theme-color), #ff8e8e);
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  color: white;
}

.summary-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  text-align: center;
}

.summary-content {
  font-size: 26rpx;
  line-height: 1.6;
  text-align: center;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.action-btn.primary {
  background: var(--theme-color);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: var(--theme-color);
  border: 2rpx solid var(--theme-color);
}

.disclaimer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  text-align: center;
  padding: 15rpx;
  font-size: 22rpx;
}
