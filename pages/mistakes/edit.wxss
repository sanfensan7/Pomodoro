.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fa;
  --theme-color: #ff6b6b;
}

/* 头部 */
.header {
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.action-btn .btn-icon {
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.action-btn .btn-text {
  font-size: 22rpx;
  font-weight: 500;
}

.action-btn.active {
  background: linear-gradient(135deg, var(--theme-color), rgba(255, 107, 107, 0.85));
  color: white;
  border-color: var(--theme-color);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.35);
}

.action-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 20rpx;
}

/* 表单区块 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
  font-style: italic;
  justify-content: space-between;
  align-items: center;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.item-label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
}

.form-input:focus {
  border-color: var(--theme-color);
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: var(--theme-color);
  background: white;
}

.form-textarea.optional {
  border-style: dashed;
  border-color: #d0d0d0;
  background: #f8f9fa;
  color: #666;
}

.form-textarea.optional:focus {
  border-color: var(--theme-color);
  background: white;
  color: #333;
}

/* 选择器 */
.picker-display {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 难度选择 */
.difficulty-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.difficulty-item {
  flex: 1;
  min-width: 120rpx;
  padding: 20rpx 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  background: #fafafa;
  transition: all 0.3s;
}

.difficulty-item.active {
  border-color: var(--theme-color);
  background: var(--theme-color);
  color: white;
}

.difficulty-stars {
  display: flex;
  justify-content: center;
  gap: 2rpx;
  margin-bottom: 8rpx;
}

.star {
  font-size: 20rpx;
  color: #ddd;
}

.star.filled {
  color: #ffc107;
}

.difficulty-item.active .star.filled {
  color: white;
}

.difficulty-label {
  font-size: 22rpx;
}

/* 图片上传 */
.image-upload {
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.image-upload.primary {
  border-color: var(--theme-color);
  background: rgba(255, 107, 107, 0.05);
}

.image-upload.primary .upload-btn {
  background: rgba(255, 107, 107, 0.1);
}

.upload-btn {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  color: #999;
  transition: all 0.3s ease;
  cursor: pointer;
}

.upload-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 20rpx;
  color: #bbb;
  text-align: center;
}

.image-preview {
  position: relative;
}

.image-preview image {
  width: 100%;
  max-height: 400rpx;
}

.image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 15rpx;
}

.change-btn, .remove-btn {
  background: rgba(255,255,255,0.9);
  color: #333;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}

.remove-btn {
  background: rgba(255,71,87,0.9);
  color: white;
}

/* 标签管理 */
.add-tag-btn {
  background: var(--theme-color);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  background: #f0f0f0;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #666;
}

.tag-remove {
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
  cursor: pointer;
}

.tag-input-container {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background: #fafafa;
}

.tag-input {
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.tag-input-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.tag-confirm-btn {
  background: var(--theme-color);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}

.tag-cancel-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}

/* 底部操作栏 */
.bottom-actions {
  background: white;
  padding: 20rpx 30rpx 30rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.08);
  border-top: 1rpx solid #f5f5f5;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, var(--theme-color), #ff8a80);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.save-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.save-btn:active::before {
  left: 100%;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.save-btn:disabled {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
  transform: none;
}