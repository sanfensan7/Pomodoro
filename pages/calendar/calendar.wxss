.container {
  min-height: 100vh;
  background: var(--background-gradient);
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 月份选择器 */
.month-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  background: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
}

.selector-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--background-color);
  transition: all 0.3s;
}

.selector-btn:active {
  transform: scale(0.9);
  background: var(--theme-color-light);
}

.arrow {
  font-size: 32rpx;
  color: var(--theme-color);
  font-weight: 700;
}

.month-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.year {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

.month {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--text-primary);
  background: linear-gradient(135deg, var(--theme-color) 0%, #ff8787 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 月统计卡片 */
.month-stats-card {
  padding: 28rpx;
  margin-bottom: 24rpx;
  background: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
}

.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

/* 日历卡片 */
.calendar-card {
  padding: 28rpx;
  background: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.calendar-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.today-btn {
  font-size: 24rpx;
  color: var(--theme-color);
  font-weight: 600;
  padding: 8rpx 20rpx;
  background: var(--theme-color-light);
  border-radius: 20rpx;
}

/* 星期标题 */
.week-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.week-day {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
  padding: 12rpx 0;
}

/* 日历格子 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-cell {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-small);
  transition: all 0.3s;
  position: relative;
}

.calendar-cell.empty {
  pointer-events: none;
}

.calendar-cell.today .cell-content {
  border: 3rpx solid var(--theme-color);
}

.cell-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-small);
  position: relative;
  transition: all 0.3s;
}

.heatmap-block {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--radius-small);
  transition: all 0.3s;
}

.calendar-cell:active .heatmap-block {
  transform: scale(0.9);
}

.day-number {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
  position: relative;
  z-index: 1;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

/* 热力图图例 */
.heatmap-legend {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid var(--border-color);
}

.legend-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

.legend-colors {
  display: flex;
  gap: 12rpx;
  flex: 1;
  overflow-x: auto;
}

.legend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.legend-color {
  width: 48rpx;
  height: 24rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.legend-text {
  font-size: 20rpx;
  color: var(--text-tertiary);
}

/* 日期详情弹窗 */
.date-detail-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s;
  pointer-events: none;
}

.date-detail-overlay.show {
  opacity: 1;
  pointer-events: all;
}

.date-detail-card {
  width: 600rpx;
  background: white;
  border-radius: var(--radius-large);
  padding: 32rpx;
  box-shadow: var(--shadow-heavy);
  animation: slideInUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideInUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.detail-date {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.detail-close {
  font-size: 40rpx;
  color: var(--text-secondary);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s;
}

.detail-close:active {
  background: var(--background-color);
  transform: scale(0.9);
}

.detail-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.detail-stat {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: var(--background-color);
  border-radius: var(--radius-medium);
}

.detail-icon {
  font-size: 48rpx;
  line-height: 1;
}

.detail-label {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

.detail-value {
  font-size: 36rpx;
  font-weight: 800;
}


