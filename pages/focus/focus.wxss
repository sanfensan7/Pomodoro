.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: var(--background-gradient);
  min-height: 100vh;
  position: relative;
  gap: 32rpx;
}

/* 状态指示器 */
.status-indicator {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  background: white;
  border-radius: 40rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: var(--shadow-medium);
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ccc;
  transition: all 0.3s ease;
}

.status-dot.active {
  animation: pulse 2s ease-in-out infinite;
}

.status-dot.paused {
  background-color: #ffc107;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.7;
  }
}

.status-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 计时器容器 */
.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: relative;
}

/* 环形计时器样式 */
.timer-circle {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.timer-ring {
  width: 360rpx;
  height: 360rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  border-radius: 50%;
  box-shadow:
    20rpx 20rpx 60rpx rgba(0, 0, 0, 0.1),
    -20rpx -20rpx 60rpx rgba(255, 255, 255, 0.8),
    inset 8rpx 8rpx 16rpx rgba(0, 0, 0, 0.05),
    inset -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.9);
}

.progress-ring {
  width: 360rpx;
  height: 360rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.timer-background {
  position: absolute;
  width: 85%;
  height: 85%;
  border-radius: 50%;
  background: linear-gradient(145deg, var(--background-color), #ffffff);
  box-shadow:
    inset 8rpx 8rpx 16rpx rgba(0, 0, 0, 0.06),
    inset -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.9);
  z-index: 1;
}

.timer-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

/* 直线计时器样式 */
.timer-line {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.progress-container {
  width: 80%;
  background: white;
  border-radius: var(--radius-large);
  padding: 24rpx;
  box-shadow: var(--shadow-medium);
}

.progress-line {
  width: 100%;
  height: 16rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  overflow: hidden;
}

/* 极简计时器样式 */
.timer-minimal {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
  backdrop-filter: blur(10rpx);
}

/* 通用计时器文本样式 */
.timer-display {
  font-size: 88rpx;
  font-weight: 700;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  letter-spacing: -2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  color: var(--theme-color);
}

.timer-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 控制按钮 */
.controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  background: none;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.control-btn:active {
  transform: scale(0.95);
}

.reset-btn .btn-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  box-shadow:
    8rpx 8rpx 16rpx #d1d1d1,
    -8rpx -8rpx 16rpx #ffffff;
  backdrop-filter: blur(10rpx);
}

.main-btn .btn-icon.main {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(145deg, var(--theme-color), rgba(255, 107, 107, 0.8));
  box-shadow:
    12rpx 12rpx 24rpx rgba(255, 107, 107, 0.3),
    -12rpx -12rpx 24rpx rgba(255, 255, 255, 0.8),
    inset 4rpx 4rpx 8rpx rgba(255, 107, 107, 0.2),
    inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.9);
  position: relative;
  overflow: hidden;
}

.main-btn .btn-icon.main::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
}

.btn-icon image {
  width: 40rpx;
  height: 40rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.main-btn .btn-icon image {
  width: 48rpx;
  height: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.btn-text {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 模式切换标签 */
.mode-tabs {
  display: flex;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--radius-large);
  padding: 8rpx;
  box-shadow: var(--shadow-light);
  backdrop-filter: blur(10rpx);
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 16rpx;
  border-radius: var(--radius-medium);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.tab:active {
  transform: scale(0.98);
}

.tab.active {
  color: white;
  box-shadow:
    0 4rpx 12rpx rgba(255, 107, 107, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
}

.tab.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
  animation: tabShimmer 2s ease-in-out infinite;
}

@keyframes tabShimmer {
  0%, 100% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
}

.tab-icon {
  font-size: 32rpx;
  transition: transform 0.3s ease;
}

.tab.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
  transition: color 0.3s ease;
}

.tab.active .tab-text {
  color: white;
  font-weight: 600;
}

/* 统计摘要 */
.stats-summary {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--radius-large);
  padding: 32rpx;
  box-shadow: var(--shadow-light);
  backdrop-filter: blur(10rpx);
}

.stats-header {
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.stat-item::after {
  content: '';
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, var(--theme-color), transparent);
  border-radius: 2rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-item:hover::after {
  opacity: 1;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--theme-color);
  text-shadow: 0 2rpx 4rpx rgba(255, 107, 107, 0.2);
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 500;
  text-align: center;
}

/* 庆祝动画覆盖层 */
.celebration-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.celebration-overlay.show {
  opacity: 1;
  pointer-events: all;
}

.celebration-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  animation: celebrationBounce 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.celebration-icon {
  font-size: 120rpx;
  animation: celebrationRotate 0.8s ease-in-out;
}

.celebration-text {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.confetti-container {
  position: absolute;
  width: 100vw;
  height: 100vh;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.confetti {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #ff6b6b, #ffa726, #66bb6a, #42a5f5);
  top: 50%;
  left: 50%;
  animation: confettiFall 1.5s ease-out forwards;
  opacity: 0;
}

.confetti:nth-child(1) { animation-delay: 0s; background: #ff6b6b; }
.confetti:nth-child(2) { animation-delay: 0.1s; background: #ffa726; }
.confetti:nth-child(3) { animation-delay: 0.2s; background: #66bb6a; }
.confetti:nth-child(4) { animation-delay: 0.3s; background: #42a5f5; }
.confetti:nth-child(5) { animation-delay: 0.4s; background: #ab47bc; }
.confetti:nth-child(6) { animation-delay: 0.5s; background: #ec407a; }
.confetti:nth-child(7) { animation-delay: 0.6s; background: #ffa726; }
.confetti:nth-child(8) { animation-delay: 0.7s; background: #66bb6a; }

@keyframes celebrationBounce {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  60% {
    transform: scale(1.1) rotate(10deg);
    opacity: 1;
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

@keyframes celebrationRotate {
  0% {
    transform: rotate(0deg) scale(0);
  }
  50% {
    transform: rotate(180deg) scale(1.2);
  }
  100% {
    transform: rotate(360deg) scale(1);
  }
}

@keyframes confettiFall {
  0% {
    transform: translate(0, 0) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translate(calc((var(--random-x, 50) - 50) * 10rpx), calc(var(--random-y, 100) * 10rpx)) rotate(720deg);
    opacity: 0;
  }
}

/* 目标进度卡片 */
.goal-progress-card {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.goal-progress-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-light);
}

.goal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.goal-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.goal-setting-btn {
  font-size: 24rpx;
  color: var(--theme-color);
  font-weight: 600;
}

.goal-item {
  margin-bottom: 20rpx;
}

.goal-item:last-child {
  margin-bottom: 0;
}

.goal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.goal-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.goal-numbers {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

.goal-progress-bar {
  width: 100%;
  height: 16rpx;
  background: var(--background-color);
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 8rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.goal-progress-fill {
  height: 100%;
  background: var(--theme-color);
  border-radius: 8rpx;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.goal-progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, 
    transparent 0%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 100%
  );
  animation: shimmer 2s infinite;
}

.goal-progress-fill.achieved {
  background: linear-gradient(90deg, #66bb6a 0%, #4caf50 100%);
  box-shadow: 0 0 20rpx rgba(76, 175, 80, 0.4);
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.goal-percentage {
  font-size: 22rpx;
  font-weight: 700;
  text-align: right;
  display: block;
}