.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  background-color: #fff;
  min-height: 100vh;
}

.celebration {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}

.celebration-emoji {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  animation: bounce 1s ease infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.celebration-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #999;
}

.stats {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
  border-radius: 16rpx;
  background-color: #f8f8f8;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.break-suggestion {
  width: 100%;
  margin-bottom: 60rpx;
}

.suggestion-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.suggestion-items {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.suggestion-emoji {
  font-size: 40rpx;
}

.suggestion-text {
  font-size: 28rpx;
  color: #666;
}

.action-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.btn-primary, .btn-secondary {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
} 