.container {
  display: flex;
  flex-direction: column;
  padding: 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  --theme-color: #ff6b6b;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  background: linear-gradient(135deg, var(--theme-color), rgba(255, 107, 107, 0.8));
  border-radius: 0 0 40rpx 40rpx;
  z-index: 0;
}

.header {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 48rpx 48rpx 0;
  position: relative;
  z-index: 1;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.back-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.settings-group {
  width: 100%;
  margin-bottom: 60rpx;
  padding: 0 48rpx;
  position: relative;
  z-index: 1;
}

.settings-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 32rpx;
  color: #333;
}

.item-value {
  font-size: 32rpx;
  color: #666;
}

.item-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.picker {
  font-size: 32rpx;
  color: #666;
}

.theme-options {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.theme-option {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.theme-option.active::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
}

.timer-style-options {
  display: flex;
  gap: 15rpx;
  margin-top: 20rpx;
  padding: 0 10rpx;
}

.timer-style {
  flex: 1;
  height: 140rpx;
  border-radius: 12rpx;
  border: 2rpx solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  min-width: 0;
}

.timer-style.active {
  border-width: 4rpx;
}

.timer-style-circle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 3rpx solid #ddd;
  margin-bottom: 8rpx;
}

.timer-style-line {
  width: 60rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #ddd;
  margin-bottom: 8rpx;
}

.timer-style-minimal {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.timer-style-label {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.feedback-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: rgba(var(--theme-color-rgb, 255, 107, 107), 0.1);
  color: var(--theme-color, #ff6b6b);
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 45rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

.feedback-btn::after {
  content: '';
  position: absolute;
  border: none;
}

.feedback-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

