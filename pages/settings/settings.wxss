.container {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  background: var(--background-color);
  min-height: 100vh;
  --theme-color: #ff6b6b;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  background: linear-gradient(135deg, var(--theme-color), rgba(255, 107, 107, 0.8));
  border-radius: 0 0 40rpx 40rpx;
  z-index: 0;
}

.header {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 48rpx 12rpx 0;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.back-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.settings-group {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 0 12rpx;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

.settings-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  width: 100%;
  box-sizing: border-box;
  min-width: 0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: var(--text-primary);
  flex: 0 0 auto;
  min-width: 120rpx;
  max-width: 160rpx;
  margin-right: 20rpx;
}

.item-value {
  font-size: 28rpx;
  color: var(--text-secondary);
  flex: 1;
  text-align: right;
  min-width: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.item-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.picker {
  font-size: 26rpx;
  color: var(--theme-color);
  text-align: center;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background: rgba(var(--theme-color-rgb, 255, 107, 107), 0.1);
  border: 1rpx solid rgba(var(--theme-color-rgb, 255, 107, 107), 0.3);
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.picker::after {
  content: '‚ñº';
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 16rpx;
  color: var(--theme-color);
  opacity: 0.8;
  transition: all 0.3s ease;
}

.picker:active::after {
  transform: translateY(-50%) rotate(180deg);
}

.picker:active {
  background: rgba(var(--theme-color-rgb, 255, 107, 107), 0.25);
  transform: scale(0.96);
  border-color: var(--theme-color);
  box-shadow: 0 2rpx 8rpx rgba(var(--theme-color-rgb, 255, 107, 107), 0.3);
}

/* Ê∑ªÂä†ÂæÆÂ¶ôÁöÑÂä®ÁîªÊïàÊûú */
.picker {
  animation: subtle-pulse 3s ease-in-out infinite;
}

@keyframes subtle-pulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(var(--theme-color-rgb, 255, 107, 107), 0.1);
  }
  50% {
    box-shadow: 0 0 0 4rpx rgba(var(--theme-color-rgb, 255, 107, 107), 0.05);
  }
}

.theme-options {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.theme-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: relative;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.theme-option.active::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.timer-style-options {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.timer-style {
  flex: 1;
  height: 120rpx;
  border-radius: var(--radius-medium);
  border: 2rpx solid var(--border-color);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  min-width: 0;
  background: var(--card-background);
  box-sizing: border-box;
}

.timer-style.active {
  border-width: 4rpx;
}

.timer-style-circle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 3rpx solid #ddd;
  margin-bottom: 8rpx;
}

.timer-style-line {
  width: 60rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #ddd;
  margin-bottom: 8rpx;
}

.timer-style-minimal {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.timer-style-label {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.feedback-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: rgba(var(--theme-color-rgb, 255, 107, 107), 0.1);
  color: var(--theme-color, #ff6b6b);
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 45rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

.feedback-btn::after {
  content: '';
  position: absolute;
  border: none;
}

.feedback-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

