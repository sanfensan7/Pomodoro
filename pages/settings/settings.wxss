}

.settings-item[bindtap="shareToFriend"] {
  background: linear-gradient(135deg, rgba(var(--theme-color-rgb), 0.05), rgba(var(--theme-color-rgb), 0.1));
  border-left: 4rpx solid var(--theme-color);
  transition: all 0.3s ease;
}

.settings-item[bindtap="shareToFriend"]:active {
  background: linear-gradient(135deg, rgba(var(--theme-color-rgb), 0.1), rgba(var(--theme-color-rgb), 0.15));
  transform: translateX(8rpx);
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 750rpx) {
  .container {
    padding: 0 16rpx;
  }

  .header {
    padding: 40rpx 8rpx 0;
  }

  .settings-group {
    padding: 0 8rpx;
    margin-bottom: 32rpx;
  }

  .settings-item {
    padding: 20rpx 0;
  }

  .item-label {
    font-size: 26rpx;
    min-width: 100rpx;
    max-width: 140rpx;
  }

  .item-value {
    font-size: 26rpx;
  }

  .theme-option {
    width: 50rpx;
    height: 50rpx;
  }

  .timer-style {
    height: 100rpx;
    min-width: 80rpx;
  }

  .timer-style-text {
    font-size: 20rpx;
  }
}

/* Ë∂ÖÂ∞èÂ±èÂπïÈÄÇÈÖç */
@media (max-width: 600rpx) {
  .settings-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }

  .item-value,
  .settings-item picker {
    max-width: 100%;
    width: 100%;
    text-align: left;
  }

  .theme-options {
    justify-content: flex-start;
  }

  .timer-style-options {
    flex-direction: column;
    gap: 16rpx;
  }

  .timer-style {
    width: 100%;
    height: 80rpx;
  }
}