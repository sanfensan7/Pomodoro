.heatmap-container {
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  margin-bottom: 30rpx;
}

.heatmap-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.heatmap-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.heatmap-subtitle {
  font-size: 24rpx;
  color: #666;
}

.month-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  padding-left: 60rpx;
}

.month-label {
  font-size: 20rpx;
  color: #999;
  flex: 1;
  text-align: center;
}

.heatmap-grid {
  display: flex;
  margin-bottom: 20rpx;
}

.weekday-labels {
  display: flex;
  flex-direction: column;
  width: 60rpx;
  margin-right: 8rpx;
}

.weekday-label {
  height: 22rpx;
  font-size: 18rpx;
  color: #999;
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.heatmap-weeks {
  display: flex;
  flex: 1;
  gap: 4rpx;
}

.heatmap-week {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 4rpx;
}

.heatmap-day {
  width: 100%;
  height: 22rpx;
  border-radius: 4rpx;
  background-color: #ebedf0;
  border: 1rpx solid #e1e4e8;
  transition: all 0.2s ease;
  position: relative;
}

.heatmap-day.today {
  border: 2rpx solid #0366d6;
  border-radius: 6rpx;
}

.heatmap-day:active {
  transform: scale(1.1);
}

.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.legend-text {
  font-size: 20rpx;
  color: #999;
}

.legend-colors {
  display: flex;
  gap: 4rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
  border: 1rpx solid #e1e4e8;
}

.heatmap-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #666;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .heatmap-day {
    height: 18rpx;
  }

  .weekday-label {
    height: 18rpx;
    font-size: 16rpx;
  }

  .month-label {
    font-size: 18rpx;
  }
}
