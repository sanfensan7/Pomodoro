/**
 * 全局样式 - 现代企业级设计系统
 * Version: 2.0
 * 遵循Material Design 3.0 和 iOS Human Interface Guidelines
 */

/* ==================== 
   设计令牌 (Design Tokens)
   ==================== */

page {
  /* 主题色系 */
  --theme-color: #ff6b6b;
  --theme-light: #ff8787;
  --theme-lighter: #ffa5a5;
  --theme-dark: #e85555;
  --theme-gradient: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  
  /* 中性色系 - 企业级灰度 */
  --gray-50: #f8f9fa;
  --gray-100: #f1f3f5;
  --gray-200: #e9ecef;
  --gray-300: #dee2e6;
  --gray-400: #ced4da;
  --gray-500: #adb5bd;
  --gray-600: #868e96;
  --gray-700: #495057;
  --gray-800: #343a40;
  --gray-900: #212529;
  
  /* 语义色系 */
  --color-success: #51cf66;
  --color-warning: #ffc107;
  --color-error: #ff6b6b;
  --color-info: #339af0;
  
  /* 文字色系 */
  --text-primary: #212529;
  --text-secondary: #6c757d;
  --text-tertiary: #adb5bd;
  --text-disabled: #dee2e6;
  
  /* 背景色系 */
  --background-color: #ffffff;
  --background-secondary: #f8f9fa;
  --background-tertiary: #f1f3f5;
  --background-gradient: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
  --background-glass: rgba(255, 255, 255, 0.8);
  
  /* 阴影系统 - 企业级微妙阴影 */
  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.08), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.08), 0 2px 4px -1px rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.04);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.08), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
  --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
  
  /* 旧版兼容 */
  --shadow-light: var(--shadow-sm);
  --shadow-medium: var(--shadow-md);
  --shadow-heavy: var(--shadow-lg);
  
  /* 圆角系统 */
  --radius-xs: 4rpx;
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 20rpx;
  --radius-2xl: 24rpx;
  --radius-full: 9999rpx;
  
  /* 旧版兼容 */
  --radius-small: var(--radius-sm);
  --radius-medium: var(--radius-md);
  --radius-large: var(--radius-lg);
  
  /* 间距系统 */
  --spacing-xs: 4rpx;
  --spacing-sm: 8rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  --spacing-2xl: 48rpx;
  --spacing-3xl: 64rpx;
  
  /* 字体系统 - 更现代的字阶 */
  --font-xs: 20rpx;
  --font-sm: 22rpx;
  --font-base: 24rpx;
  --font-md: 26rpx;
  --font-lg: 28rpx;
  --font-xl: 32rpx;
  --font-2xl: 36rpx;
  --font-3xl: 40rpx;
  --font-4xl: 48rpx;
  
  /* 字重 */
  --font-regular: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;
  
  /* 行高 */
  --leading-none: 1;
  --leading-tight: 1.25;
  --leading-normal: 1.5;
  --leading-relaxed: 1.75;
  
  /* Z-index 层级 */
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal-backdrop: 1040;
  --z-modal: 1050;
  --z-popover: 1060;
  --z-tooltip: 1070;
  
  /* 过渡动画 */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slower: 500ms cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Easing functions */
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-spring: cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* ==================== 
   全局样式重置
   ==================== */

page {
  background-color: var(--background-secondary);
  color: var(--text-primary);
  font-size: var(--font-base);
  line-height: var(--leading-normal);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 禁用系统默认样式 */
button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  font: inherit;
  color: inherit;
  outline: none;
}

button::after {
  border: none;
}

/* ==================== 
   通用组件样式
   ==================== */

/* 卡片 */
.card {
  background: var(--background-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: box-shadow var(--transition-base);
}

.card:hover {
  box-shadow: var(--shadow-md);
}

.card-glass {
  background: var(--background-glass);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 按钮基础样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-md);
  font-size: var(--font-sm);
  font-weight: var(--font-medium);
  transition: all var(--transition-base);
  cursor: pointer;
  user-select: none;
  white-space: nowrap;
}

.btn:active {
  transform: translateY(1rpx);
}

.btn-primary {
  background: var(--theme-gradient);
  color: #fff;
  box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2rpx);
}

.btn-secondary {
  background: var(--gray-100);
  color: var(--text-primary);
}

.btn-secondary:hover {
  background: var(--gray-200);
}

.btn-ghost {
  background: transparent;
  color: var(--text-secondary);
  border: 1rpx solid var(--gray-300);
}

.btn-ghost:hover {
  background: var(--gray-50);
  border-color: var(--gray-400);
}

/* 输入框 */
.input {
  width: 100%;
  padding: var(--spacing-md);
  background: var(--background-color);
  border: 1rpx solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: var(--font-base);
  transition: all var(--transition-base);
}

.input:focus {
  border-color: var(--theme-color);
  box-shadow: 0 0 0 3rpx rgba(255, 107, 107, 0.1);
}

.input::placeholder {
  color: var(--text-tertiary);
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-full);
  font-size: var(--font-xs);
  font-weight: var(--font-medium);
  background: var(--gray-100);
  color: var(--text-secondary);
}

.tag-primary {
  background: rgba(255, 107, 107, 0.1);
  color: var(--theme-color);
}

.tag-success {
  background: rgba(81, 207, 102, 0.1);
  color: var(--color-success);
}

.tag-warning {
  background: rgba(255, 193, 7, 0.1);
  color: var(--color-warning);
}

.tag-error {
  background: rgba(255, 107, 107, 0.1);
  color: var(--color-error);
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: var(--gray-200);
  margin: var(--spacing-lg) 0;
}

.divider-vertical {
  width: 1rpx;
  height: 100%;
  background: var(--gray-200);
  margin: 0 var(--spacing-lg);
}

/* 加载动画 */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--gray-200);
  border-top-color: var(--theme-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 骨架屏 */
.skeleton {
  background: linear-gradient(90deg, 
    var(--gray-100) 25%, 
    var(--gray-200) 50%, 
    var(--gray-100) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: var(--radius-md);
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ==================== 
   动画效果
   ==================== */

/* 淡入 */
.fade-in {
  animation: fadeIn var(--transition-slow) var(--ease-out);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 滑入 */
.slide-up {
  animation: slideUp var(--transition-slow) var(--ease-out);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 缩放 */
.scale-in {
  animation: scaleIn var(--transition-slow) var(--ease-spring);
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 弹跳 */
.bounce-in {
  animation: bounceIn 0.6s var(--ease-spring);
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
  }
}

/* ==================== 
   工具类
   ==================== */

/* 文字 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.text-primary { color: var(--text-primary); }
.text-secondary { color: var(--text-secondary); }
.text-tertiary { color: var(--text-tertiary); }
.text-theme { color: var(--theme-color); }

.text-xs { font-size: var(--font-xs); }
.text-sm { font-size: var(--font-sm); }
.text-base { font-size: var(--font-base); }
.text-lg { font-size: var(--font-lg); }
.text-xl { font-size: var(--font-xl); }
.text-2xl { font-size: var(--font-2xl); }
.text-3xl { font-size: var(--font-3xl); }

.font-regular { font-weight: var(--font-regular); }
.font-medium { font-weight: var(--font-medium); }
.font-semibold { font-weight: var(--font-semibold); }
.font-bold { font-weight: var(--font-bold); }

/* 间距 */
.m-0 { margin: 0; }
.m-xs { margin: var(--spacing-xs); }
.m-sm { margin: var(--spacing-sm); }
.m-md { margin: var(--spacing-md); }
.m-lg { margin: var(--spacing-lg); }
.m-xl { margin: var(--spacing-xl); }

.p-0 { padding: 0; }
.p-xs { padding: var(--spacing-xs); }
.p-sm { padding: var(--spacing-sm); }
.p-md { padding: var(--spacing-md); }
.p-lg { padding: var(--spacing-lg); }
.p-xl { padding: var(--spacing-xl); }

/* 布局 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }

.gap-xs { gap: var(--spacing-xs); }
.gap-sm { gap: var(--spacing-sm); }
.gap-md { gap: var(--spacing-md); }
.gap-lg { gap: var(--spacing-lg); }
.gap-xl { gap: var(--spacing-xl); }

/* 显示 */
.hidden { display: none; }
.block { display: block; }
.inline { display: inline; }
.inline-block { display: inline-block; }

/* 溢出 */
.overflow-hidden { overflow: hidden; }
.overflow-scroll { overflow: scroll; }
.overflow-auto { overflow: auto; }

/* 定位 */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }

/* 圆角 */
.rounded-sm { border-radius: var(--radius-sm); }
.rounded-md { border-radius: var(--radius-md); }
.rounded-lg { border-radius: var(--radius-lg); }
.rounded-xl { border-radius: var(--radius-xl); }
.rounded-full { border-radius: var(--radius-full); }

/* 阴影 */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow-md { box-shadow: var(--shadow-md); }
.shadow-lg { box-shadow: var(--shadow-lg); }
.shadow-xl { box-shadow: var(--shadow-xl); }

/* ==================== 
   响应式
   ==================== */

/* 小屏适配 */
@media (max-width: 375px) {
  page {
    --font-xs: 18rpx;
    --font-sm: 20rpx;
    --font-base: 22rpx;
    --spacing-lg: 20rpx;
    --spacing-xl: 28rpx;
  }
}

/* ==================== 
   深色模式支持 (预留)
   ==================== */

@media (prefers-color-scheme: dark) {
