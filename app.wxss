/**app.wxss**/
page {
  --theme-color: #ff6b6b;
  --theme-color-rgb: 255, 107, 107;
  --theme-color-light: rgba(255, 107, 107, 0.1);
  --theme-color-medium: rgba(255, 107, 107, 0.3);
  --background-color: #f5f7fa;
  --background-gradient: linear-gradient(135deg, #f5f7fa 0%, #e8edf2 100%);
  --card-background: #ffffff;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-tertiary: #95a5a6;
  --border-color: #f0f0f0;
  --shadow-light: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  --shadow-medium: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  --shadow-heavy: 0 20rpx 60rpx rgba(0, 0, 0, 0.12);
  --radius-small: 12rpx;
  --radius-medium: 16rpx;
  --radius-large: 24rpx;

  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  background-color: var(--background-color);
  color: var(--text-primary);
}

/* 重置按钮样式 */
button {
  margin: 0;
  padding: 0;
  background: none;
  border: none;
  text-align: left;
  line-height: inherit;
  overflow: visible;
  font-family: inherit;
  font-size: inherit;
  color: inherit;
  border-radius: 0;
  box-sizing: border-box;
}

button::after {
  border: none;
}

/* 通用容器样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: var(--card-background);
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card:active {
  box-shadow: var(--shadow-light);
  transform: scale(0.98);
}

/* 按钮基础样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 40rpx;
  border-radius: var(--radius-medium);
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}

.btn:active {
  transform: scale(0.96);
}

.btn-primary {
  background: linear-gradient(135deg, var(--theme-color) 0%, rgba(255, 107, 107, 0.8) 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.btn-secondary {
  background: white;
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
  box-shadow: var(--shadow-light);
}

.btn-ghost {
  background: transparent;
  color: var(--theme-color);
  border: 2rpx solid var(--theme-color);
}

/* 输入框样式 */
.input {
  padding: 28rpx 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-medium);
  font-size: 28rpx;
  background: white;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input:focus {
  border-color: var(--theme-color);
  box-shadow: 0 0 0 8rpx rgba(255, 107, 107, 0.1), 0 4rpx 12rpx rgba(255, 107, 107, 0.15);
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
  font-weight: 500;
}

.text-secondary {
  color: var(--text-secondary);
}

.text-tertiary {
  color: var(--text-tertiary);
  font-size: 24rpx;
}

.text-theme {
  color: var(--theme-color);
  font-weight: 500;
}

/* 间距工具类 */
.mt-small { margin-top: 16rpx; }
.mt-medium { margin-top: 24rpx; }
.mt-large { margin-top: 32rpx; }

.mb-small { margin-bottom: 16rpx; }
.mb-medium { margin-bottom: 24rpx; }
.mb-large { margin-bottom: 32rpx; }

.p-small { padding: 16rpx; }
.p-medium { padding: 24rpx; }
.p-large { padding: 32rpx; }

/* 过渡动画效果 */
.fade-in {
  animation: fadeIn 0.4s ease-out;
}

.slide-up {
  animation: slideUp 0.4s ease-out;
}

.scale-in {
  animation: scaleIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.bounce-in {
  animation: bounceIn 0.6s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes bounceIn {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.8;
  }
  70% {
    transform: scale(0.9);
    opacity: 0.9;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--theme-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 导航栏文字大小调整 */
.uni-tabbar-item .uni-tabbar-item-text {
  font-size: 32rpx !important;
  font-weight: 500;
}

/* 兼容不同版本的tabbar样式 */
.tabbar-item-text {
  font-size: 32rpx !important;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }

  .btn {
    padding: 20rpx 28rpx;
    font-size: 26rpx;
  }
}
